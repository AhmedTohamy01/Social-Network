<aside class="col-lg">
  <section class="friend-notification">
    <% if current_user.friend_requests.any? %>
      <div class="stats">
         <h4>See All <a href="<%= friendships_path(current_user) %>">Friend Requests</a></h4>
      </div>
    <% end %>
  </section>
</aside>

<%= form_for(@post) do |form| %>
  <%= form.label :content %>
  <%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
  <% if @post.errors.full_messages.any? %>
    <p class="errors">
      <%= "Post could not be saved. #{@post.errors.full_messages.join('. ')}" %>
    </p>
  <% end %>
  <%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
  <% if @timeline_posts.any? %>
    <h3>Recent posts</h3>
    <ul class="posts">
      <%= render @timeline_posts %>
    </ul>
    <%= will_paginate @timeline_posts %>
  <% end %>
</article>
